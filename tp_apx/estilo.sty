%
% Para armar un APX 1,2,3 o 4 (uso interno)
%
\newenvironment{apx}[6]
{
  \vspace{2ex}

  \begin{center}
    \Large{APX #6}
    \rule{\textwidth}{1pt}
  \end{center}

  \begin{flushleft}
  \begin{tabular*}{345pt}{ll@{\extracolsep{\fill}}r}
    \textbf{\underline{Área:} } #1 & \multicolumn{2}{l}{\textbf{\underline{Responsable:} } #2} \\ [10pt]
    \textbf{\underline{Proceso:} } #3 & \textbf{\underline{Fecha:} } #4 & \textbf{\underline{Hoja:} } #5
  \end{tabular*}
  \end{flushleft}

  \begin{center}
}
{
  \vspace{1ex}
  \rule{\textwidth}{1pt}
  \vspace{1ex}
  \end{center}
}

